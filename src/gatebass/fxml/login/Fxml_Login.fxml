<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox nodeOrientation="RIGHT_TO_LEFT" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gatebass.fxml.login.Fxml_Login">
   <children>
      <VBox style="-fx-font-family: &quot;B Yekan&quot;; -fx-font-size: 15.5;">
         <children>
            <Label text="نام کاربری" />
            <TextField fx:id="userName" prefWidth="200.0" promptText="نام کاربری را وارد کنید">
               <font>
                  <Font name="B Yekan" size="15.0" />
               </font>
            </TextField>
            <Label text="رمز عبور">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <PasswordField fx:id="password" prefWidth="200.0" promptText="رمز عبور را وارد کنید">
               <font>
                  <Font name="B Yekan" size="15.0" />
               </font>
            </PasswordField>
            <CheckBox fx:id="remember" mnemonicParsing="false" text="بخاطر سپردن برای امروز">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </CheckBox>
         </children>
         <padding>
            <Insets bottom="35.0" left="20.0" right="20.0" />
         </padding>
      </VBox>
      <HBox alignment="CENTER" spacing="30.0" style="-fx-background-color: #003366;" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="okButton" defaultButton="true" mnemonicParsing="false" onAction="#actionOk" prefWidth="75.0" text="ورود">
               <font>
                  <Font name="B Yekan" size="16.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
            </Button>
            <Button cancelButton="true" mnemonicParsing="false" onAction="#actionCancel" prefWidth="75.0" text="بستن">
               <font>
                  <Font name="B Yekan" size="16.0" />
               </font>
               <effect>
                  <DropShadow />
               </effect>
            </Button>
         </children>
         <padding>
            <Insets bottom="15.0" top="15.0" />
         </padding>
         <effect>
            <DropShadow />
         </effect>
      </HBox>
   </children>
   <padding>
      <Insets top="20.0" />
   </padding>
</VBox>
